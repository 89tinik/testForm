<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">test_email_form.test_email_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Test Email Form</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <namespace>test_email_form</namespace>
        <dataScope>data.general</dataScope>
        <deps>
            <dep>test_email_form.test_email_form_data_source</dep>
        </deps>
        <buttons>
            <button name="save" class="Test\Form\Block\Form\TestEmail\Save"/>
            <button name="back" class="Test\Form\Block\Form\TestEmail\Back"/>
            <button name="delete" class="Test\Form\Block\Form\TestEmail\Delete"/>
        </buttons>
    </settings>
    <dataSource name="test_email_form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="test_email/testemail/save"/>
        </settings>
        <dataProvider class="Test\Form\Ui\DataProvider\TestEmailDataProvider" name="test_email_form_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">General</label>
        </settings>
        <field name="entity_id" sortOrder="0" formElement="hidden">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">entity_id</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Entity ID</label>
                <dataScope>entity_id</dataScope>
            </settings>
        </field>
        <field name="email" sortOrder="00" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">email</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Email</label>
                <dataScope>email</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
